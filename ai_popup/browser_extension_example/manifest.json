{
  "manifest_version": 3,
  "name": "AI Popup - Form Assistant",
  "version": "2.0.0",
  "description": "AI-powered form filling assistant with authentication and document management",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://*.google.com/*",
    "https://docs.google.com/*",
    "https://forms.google.com/*",
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "http://127.0.0.1:*/*",
        "https://*.google.com/*",
        "https://docs.google.com/*", 
        "https://forms.google.com/*",
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "*://*/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Popup - Form Assistant"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["ai_popup.png"],
      "matches": ["*://*/*"]
    }
  ],
  
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,"
  }
} 